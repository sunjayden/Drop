<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gatech.cs2340.android.drop">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controllers.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.SignInActivity"
            android:label="Sign In"
            android:parentActivityName=".controllers.SignInActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.SignInActivity" />
        </activity>
        <activity
            android:name=".controllers.SignUpActivity"
            android:label="Sign Up"
            android:parentActivityName=".controllers.SignUpActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.SignUpActivity" />
        </activity>
        <activity
            android:name=".controllers.RetrievePasswordActivity"
            android:label="Forgot Password"
            android:parentActivityName=".controllers.RetrievePasswordActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.RetrievePasswordActivity" />
        </activity>
        <activity
            android:name=".controllers.MainActivity"
            android:label="Main Activity"
            android:parentActivityName=".controllers.RetrievePasswordActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainActivity" />
        </activity>
    </application>

</manifest>