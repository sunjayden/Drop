<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/historical_report_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background"
    android:paddingBottom="48dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gatech.cs2340.android.drop.controllers.HistoricalActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardDatesGraph"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="2sp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/graph" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>







    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        app:itemBackground="@color/colorAccent"
        app:itemIconTint="#f1e5e2"
        app:itemTextColor="#ffffff"
        app:menu="@menu/bottom_nav_items" />

    <ImageView
        android:id="@+id/imgFullscreen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/fullscreen"
        android:layout_below="@+id/cardDatesGraph"
        android:layout_alignEnd="@+id/navigation_view"
        android:layout_marginEnd="17dp" />


    <EditText
        android:id="@+id/editLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="20dp"
        android:hint="Location"
        android:layout_below="@+id/cardDatesGraph" />

    <EditText
        android:id="@+id/editYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editLocation"
        android:layout_alignLeft="@+id/editLocation"
        android:hint="Year" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Virus/Contaminant"
        android:layout_below="@+id/editYear"
        android:layout_alignLeft="@id/editLocation" />

    <Spinner
        android:id="@+id/vSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@id/editLocation"
        android:layout_marginTop="13dp" />

    <Button
        android:id="@+id/submit_his"
        style="@style/Button_half"
        android:background="@drawable/rounder_corner_button"
        android:text="submit"
        android:textAllCaps="true"
        android:layout_below="@+id/vSpinner"
        android:layout_alignRight="@id/imgFullscreen"/>


</RelativeLayout>






