<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setting_screen"
    android:background="@drawable/app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="48dp"
    android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:src="@drawable/edit_profile"
            android:background="@null"
            android:contentDescription="@string/security_log"
            android:layout_marginRight="24dp"
            android:layout_marginStart="60dp"
            android:id="@+id/edit_profile_icon" />

        <ImageButton
            android:id="@+id/security_log"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/security_log"
            android:background="@null"
            android:scaleType="fitCenter"
            android:contentDescription="@string/edit_profile"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="45dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="180dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/edit_profile_text"
            android:layout_below="@+id/edit_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT PROFILE"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SECURITY LOG"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginLeft="55dp"/>
    </LinearLayout>


    <android.support.design.widget.BottomNavigationView

        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        app:itemBackground="@color/colorAccent"
        app:itemIconTint="#f1e5e2"
        app:itemTextColor="#ffffff"
        app:menu="@menu/bottom_nav_items" />
</RelativeLayout>


