<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_purity_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="gatech.cs2340.android.drop.controllers.EditPurityReport"
    android:weightSum="1">


    <EditText
        android:id="@+id/reportDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Date"
        android:inputType="date"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/reportNo"
        android:layout_width="match_parent"
        android:hint="ReportNo"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="14dp"
        android:inputType="number" />

    <EditText
        android:id="@+id/reportName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:textSize="14dp"
        />

    <TextView
        android:id="@+id/Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="Location"
        android:textSize="14dp"
        />


    <EditText
        android:id="@+id/Latitude"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textSize="14dp"
        android:hint="Latitude" />

    <EditText
        android:id="@+id/Longitude"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/Latitude"
        android:ems="10"
        android:hint="Longitude"
        android:textSize="14dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:text="Condition" />

    <Spinner
        android:id="@+id/conditionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03" />

    <EditText
        android:id="@+id/virusPPM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14dp"
        android:hint="Virus PPM" />

    <EditText
        android:id="@+id/contaminantPPM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="14dp"
        android:inputType="textPersonName"
        android:hint="Contaminant PPM" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        tools:context="gatech.cs2340.android.drop.controllers.EditPurityReport"
        android:weightSum="1">


        <Button
            android:id="@+id/button2"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:text="ADD" />

        <Button
            android:id="@+id/button3"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="CANCEL" />


    </LinearLayout>



</LinearLayout>
